<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tan089.sos.ReportPage"
    android:orientation="vertical"
    android:background="#FFF">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click the button to report an emrgency"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:id="@+id/textView1"/>
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:background="@drawable/gun"
                    android:id="@+id/gunBnt"
                    android:text="Shooting"
                    android:textColor="#ff0000"
                    android:textSize="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:background="@drawable/fire"
                    android:id="@+id/fireBnt"
                    android:text="Fire"
                    android:textColor="#ff0000"
                    android:textSize="20dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:background="@drawable/bombthreat"
                    android:id="@+id/bombBnt"
                    android:text="Bomb"
                    android:textColor="#ff0000"
                    android:textSize="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:background="@drawable/fighting"
                    android:id="@+id/fightingBnt"
                    android:text="Fighting"
                    android:textColor="#ff0000"
                    android:textSize="20dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:background="@drawable/hidencam"
                    android:id="@+id/StalkBnt"
                    android:text="Stalking"
                    android:textColor="#ff0000"
                    android:textSize="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:background="@drawable/biohazard"
                    android:id="@+id/bioHazardBnt"
                    android:text="Poison"
                    android:textColor="#ff0000"
                    android:textSize="20dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:background="@drawable/tornato"
                    android:id="@+id/TornatoBnt"
                    android:text="Storm"
                    android:textColor="#ff0000"
                    android:textSize="20dp"
                    android:layout_marginRight="30dp" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:background="@drawable/intruder"
                    android:id="@+id/IntruderBnt"
                    android:text="Theft"
                    android:textColor="#ff0000"
                    android:textSize="20dp"/>
            </GridLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
